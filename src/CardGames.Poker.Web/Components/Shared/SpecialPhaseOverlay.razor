@namespace CardGames.Poker.Web.Components.Shared

<div class="table-overlay special-phase-overlay">
    <div class="overlay-content">
        <div class="overlay-icon"><i class="@IconClass"></i></div>
        <h2>@Title</h2>
        @if (!string.IsNullOrWhiteSpace(Description))
        {
            <p>@Description</p>
        }
        @ChildContent
    </div>
</div>

@code {
    /// <summary>
    /// The title displayed in the overlay.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "Special Phase";

    /// <summary>
    /// Optional description text.
    /// </summary>
    [Parameter]
    public string? Description { get; set; }

    /// <summary>
    /// Font Awesome icon class for the overlay icon.
    /// </summary>
    [Parameter]
    public string IconClass { get; set; } = "fa-solid fa-star";

    /// <summary>
    /// Optional child content to render inside the overlay.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
