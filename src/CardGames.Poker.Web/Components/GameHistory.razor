@using CardGames.Poker.Shared.Contracts.History
@using CardGames.Poker.Web.Services
@inject AuthService AuthService

<div class="mb-4">
    <h5 class="text-muted mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-clock-history me-2" viewBox="0 0 16 16">
            <path d="M8.515 1.019A7 7 0 0 0 8 1V0a8 8 0 0 1 .589.022zm2.004.45a7 7 0 0 0-.985-.299l.219-.976q.576.129 1.126.342zm1.37.71a7 7 0 0 0-.439-.27l.493-.87a8 8 0 0 1 .979.654l-.615.789a7 7 0 0 0-.418-.302zm1.834 1.79a7 7 0 0 0-.653-.796l.724-.69q.406.429.747.91zm.744 1.352a7 7 0 0 0-.214-.468l.893-.45a8 8 0 0 1 .45 1.088l-.95.313a7 7 0 0 0-.179-.483m.53 2.507a7 7 0 0 0-.1-1.025l.985-.17q.1.58.116 1.17zm-.131 1.538q.05-.254.081-.51l.993.123a8 8 0 0 1-.23 1.155l-.964-.267q.069-.247.12-.501m-.952 2.379q.276-.436.486-.908l.914.405q-.24.54-.555 1.038zm-.964 1.205q.183-.183.35-.378l.758.653a8 8 0 0 1-.401.432z"/>
            <path d="M8 1a7 7 0 1 0 4.95 11.95l.707.707A8.001 8.001 0 1 1 8 0z"/>
            <path d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5"/>
        </svg>
        Game History
    </h5>

    @if (_isLoading)
    {
        <div class="text-center py-3">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <span class="ms-2">Loading history...</span>
        </div>
    }
    else if (_errorMessage is not null)
    {
        <div class="alert alert-danger py-2" role="alert">
            @_errorMessage
            <button class="btn btn-link btn-sm p-0 ms-2" @onclick="LoadHistoryAsync">Retry</button>
        </div>
    }
    else if (_history is null || _history.Count == 0)
    {
        <div class="card bg-light">
            <div class="card-body text-center py-4">
                <p class="text-muted mb-0">No games played yet. Join a table to start your journey!</p>
            </div>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var game in _history)
            {
                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">
                                @game.GameType
                                @if (!string.IsNullOrEmpty(game.TableName))
                                {
                                    <small class="text-muted">@@ @game.TableName</small>
                                }
                                @if (!string.IsNullOrEmpty(game.TournamentName))
                                {
                                    <span class="badge bg-info ms-2">Tournament</span>
                                }
                            </h6>
                            <small class="text-muted">
                                @game.EndedAt.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")
                                â€¢ @game.PlayerCount players
                            </small>
                        </div>
                        <div class="text-end">
                            @if (game.Won)
                            {
                                <span class="badge bg-success fs-6">Won</span>
                                <div class="text-success small fw-bold">+@game.ChipsWon.ToString("N0")</div>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">Lost</span>
                                <div class="text-danger small fw-bold">-@game.ChipsLost.ToString("N0")</div>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(game.HandSummary))
                    {
                        <small class="text-muted d-block mt-2">@game.HandSummary</small>
                    }
                </div>
            }
        </div>

        @if (_totalPages > 1)
        {
            <nav class="mt-3" aria-label="Game history navigation">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(_currentPage <= 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="PreviousPage" disabled="@(_currentPage <= 1)">Previous</button>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page @_currentPage of @_totalPages</span>
                    </li>
                    <li class="page-item @(_currentPage >= _totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="NextPage" disabled="@(_currentPage >= _totalPages)">Next</button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@code {
    private IReadOnlyList<GameHistoryDto>? _history;
    private bool _isLoading = true;
    private string? _errorMessage;
    private int _currentPage = 1;
    private int _totalPages = 1;
    private const int PageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadHistoryAsync();
    }

    public async Task LoadHistoryAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var response = await AuthService.GetGameHistoryAsync(_currentPage, PageSize);
            if (response.Success)
            {
                _history = response.Items;
                _totalPages = response.TotalPages > 0 ? response.TotalPages : 1;
            }
            else
            {
                _errorMessage = response.Error ?? "Failed to load game history";
            }
        }
        catch (Exception)
        {
            _errorMessage = "An error occurred while loading game history.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task PreviousPage()
    {
        if (_currentPage > 1)
        {
            _currentPage--;
            await LoadHistoryAsync();
        }
    }

    private async Task NextPage()
    {
        if (_currentPage < _totalPages)
        {
            _currentPage++;
            await LoadHistoryAsync();
        }
    }
}
