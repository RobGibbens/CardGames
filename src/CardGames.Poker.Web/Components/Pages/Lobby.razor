@page "/lobby"
@using CardGames.Poker.Shared.DTOs
@using CardGames.Poker.Shared.Enums
@using CardGames.Poker.Web.Services
@inject LobbyService LobbyService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Lobby - CardGames Poker</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Game Lobby</h1>
        <div class="d-flex gap-2">
            <button class="btn btn-primary" @onclick="QuickJoin" disabled="@_isQuickJoining">
                @if (_isQuickJoining)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                    <span>Finding table...</span>
                }
                else
                {
                    <span class="me-1">⚡</span><span>Quick Join</span>
                }
            </button>
            <a href="/tables/create" class="btn btn-success">
                <span class="me-1">+</span> Create Table
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @_successMessage
            <button type="button" class="btn-close" @onclick="() => _successMessage = null" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Filters Panel -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Game Type</label>
                        <select class="form-select" @bind="_selectedVariant">
                            <option value="">All Games</option>
                            @foreach (var variant in Enum.GetValues<PokerVariant>())
                            {
                                <option value="@variant">@GetVariantDisplayName(variant)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Stakes (Small Blind)</label>
                        <div class="row g-2">
                            <div class="col-6">
                                <input type="number" class="form-control" placeholder="Min" @bind="_minSmallBlind" min="0" />
                            </div>
                            <div class="col-6">
                                <input type="number" class="form-control" placeholder="Max" @bind="_maxSmallBlind" min="0" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Available Seats (Min)</label>
                        <input type="number" class="form-control" @bind="_minAvailableSeats" min="0" max="10" />
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="hideFullTables" @bind="_hideFullTables" />
                            <label class="form-check-label" for="hideFullTables">Hide Full Tables</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="hideEmptyTables" @bind="_hideEmptyTables" />
                            <label class="form-check-label" for="hideEmptyTables">Hide Empty Tables</label>
                        </div>
                    </div>

                    <button class="btn btn-primary w-100" @onclick="ApplyFilters">Apply Filters</button>
                    <button class="btn btn-outline-secondary w-100 mt-2" @onclick="ClearFilters">Clear Filters</button>
                </div>
            </div>
        </div>

        <!-- Tables List -->
        <div class="col-md-9">
            @if (_isLoading)
            {
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @_errorMessage
                </div>
            }
            else if (_tables == null || _tables.Count == 0)
            {
                <div class="alert alert-info">
                    <strong>No tables found.</strong> Try adjusting your filters or <a href="/tables/create">create a new table</a>.
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">@_tables.Count table(s) found</span>
                    <button class="btn btn-outline-primary btn-sm" @onclick="RefreshTables">
                        <span class="me-1">↻</span> Refresh
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Table Name</th>
                                <th>Game Type</th>
                                <th>Stakes</th>
                                <th>Buy-In</th>
                                <th>Seats</th>
                                <th>Waiting</th>
                                <th>Privacy</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var table in _tables)
                            {
                                <tr>
                                    <td><strong>@table.Name</strong></td>
                                    <td>@GetVariantDisplayName(table.Variant)</td>
                                    <td>@table.SmallBlind/@table.BigBlind</td>
                                    <td>@table.MinBuyIn - @table.MaxBuyIn</td>
                                    <td>
                                        <span class="@GetSeatsClass(table)">
                                            @table.OccupiedSeats/@table.MaxSeats
                                        </span>
                                    </td>
                                    <td>
                                        @if (table.WaitingListCount > 0)
                                        {
                                            <span class="badge bg-info">@table.WaitingListCount waiting</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetPrivacyBadgeClass(table.Privacy)">
                                            @GetPrivacyDisplayName(table.Privacy)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(table.State)">
                                            @GetStatusDisplayName(table.State)
                                        </span>
                                    </td>
                                    <td>
                                        @if (table.OccupiedSeats >= table.MaxSeats)
                                        {
                                            <button class="btn btn-sm btn-outline-warning" 
                                                    disabled="@(_joiningWaitlistTableId == table.Id)"
                                                    @onclick="() => HandleJoinWaitingListClick(table)">
                                                @if (_joiningWaitlistTableId == table.Id)
                                                {
                                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                                }
                                                else
                                                {
                                                    <span>Wait List</span>
                                                }
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-success" 
                                                    disabled="@(_joiningTableId == table.Id)"
                                                    @onclick="() => HandleJoinClick(table)">
                                                @if (_joiningTableId == table.Id)
                                                {
                                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                                }
                                                else
                                                {
                                                    <span>Join</span>
                                                }
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Password Modal -->
@if (_showPasswordModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Enter Table Password</h5>
                    <button type="button" class="btn-close" @onclick="ClosePasswordModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(_passwordError))
                    {
                        <div class="alert alert-danger">@_passwordError</div>
                    }
                    <p>The table "<strong>@_selectedTable?.Name</strong>" requires a password to join.</p>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" @bind="_enteredPassword" @onkeyup="HandlePasswordKeyUp" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="ClosePasswordModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="JoinWithPassword" disabled="@_isJoining">
                        @if (_isJoining)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            <span>Joining...</span>
                        }
                        else
                        {
                            <span>Join Table</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Waiting List Modal -->
@if (_showWaitingListModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Join Waiting List</h5>
                    <button type="button" class="btn-close" @onclick="CloseWaitingListModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(_waitingListError))
                    {
                        <div class="alert alert-danger">@_waitingListError</div>
                    }
                    <p>The table "<strong>@_selectedTable?.Name</strong>" is currently full.</p>
                    <p>You will be notified when a seat becomes available.</p>
                    @if (_selectedTable?.WaitingListCount > 0)
                    {
                        <p class="text-muted">Current waiting list: @_selectedTable.WaitingListCount player(s)</p>
                    }
                    <div class="mb-3">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="form-control" @bind="_waitingListPlayerName" @onkeyup="HandleWaitingListKeyUp" placeholder="Enter your name" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseWaitingListModal">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="JoinWaitingList" disabled="@_isJoiningWaitlist">
                        @if (_isJoiningWaitlist)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            <span>Joining...</span>
                        }
                        else
                        {
                            <span>Join Waiting List</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private IReadOnlyList<TableSummaryDto>? _tables;
    private bool _isLoading = true;
    private string? _errorMessage;
    private string? _successMessage;

    // Filter state
    private string? _selectedVariant;
    private int? _minSmallBlind;
    private int? _maxSmallBlind;
    private int? _minAvailableSeats;
    private bool _hideFullTables;
    private bool _hideEmptyTables;

    // Join state
    private Guid? _joiningTableId;
    private bool _isJoining;
    private bool _isQuickJoining;

    // Password modal state
    private bool _showPasswordModal;
    private TableSummaryDto? _selectedTable;
    private string? _enteredPassword;
    private string? _passwordError;

    // Waiting list state
    private bool _showWaitingListModal;
    private Guid? _joiningWaitlistTableId;
    private bool _isJoiningWaitlist;
    private string? _waitingListPlayerName;
    private string? _waitingListError;

    protected override async Task OnInitializedAsync()
    {
        await LoadTablesAsync();
    }

    private async Task LoadTablesAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        PokerVariant? variant = null;
        if (!string.IsNullOrEmpty(_selectedVariant) && Enum.TryParse<PokerVariant>(_selectedVariant, out var parsedVariant))
        {
            variant = parsedVariant;
        }

        var response = await LobbyService.GetTablesAsync(
            variant,
            _minSmallBlind,
            _maxSmallBlind,
            _minAvailableSeats,
            _hideFullTables,
            _hideEmptyTables);

        if (response.Success)
        {
            _tables = response.Tables;
        }
        else
        {
            _errorMessage = response.Error;
        }

        _isLoading = false;
    }

    private async Task ApplyFilters()
    {
        await LoadTablesAsync();
    }

    private async Task ClearFilters()
    {
        _selectedVariant = null;
        _minSmallBlind = null;
        _maxSmallBlind = null;
        _minAvailableSeats = null;
        _hideFullTables = false;
        _hideEmptyTables = false;
        await LoadTablesAsync();
    }

    private async Task RefreshTables()
    {
        await LoadTablesAsync();
    }

    private async Task HandleJoinClick(TableSummaryDto table)
    {
        if (table.Privacy == TablePrivacy.Password)
        {
            _selectedTable = table;
            _enteredPassword = null;
            _passwordError = null;
            _showPasswordModal = true;
        }
        else
        {
            await JoinTable(table.Id, null);
        }
    }

    private void HandleJoinWaitingListClick(TableSummaryDto table)
    {
        _selectedTable = table;
        _waitingListPlayerName = null;
        _waitingListError = null;
        _showWaitingListModal = true;
    }

    private async Task JoinTable(Guid tableId, string? password)
    {
        _joiningTableId = tableId;
        _isJoining = true;
        _errorMessage = null;
        StateHasChanged();

        var response = await LobbyService.JoinTableAsync(tableId, password);

        if (response.Success)
        {
            _successMessage = $"Successfully joined table! You are in seat {response.SeatNumber}.";
            ClosePasswordModal();
            await LoadTablesAsync();
        }
        else
        {
            if (_showPasswordModal)
            {
                _passwordError = response.Error;
            }
            else
            {
                _errorMessage = response.Error;
            }
        }

        _joiningTableId = null;
        _isJoining = false;
        StateHasChanged();
    }

    private async Task JoinWithPassword()
    {
        if (_selectedTable == null) return;
        await JoinTable(_selectedTable.Id, _enteredPassword);
    }

    private async Task HandlePasswordKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await JoinWithPassword();
        }
    }

    private void ClosePasswordModal()
    {
        _showPasswordModal = false;
        _selectedTable = null;
        _enteredPassword = null;
        _passwordError = null;
    }

    private async Task JoinWaitingList()
    {
        if (_selectedTable == null) return;

        if (string.IsNullOrWhiteSpace(_waitingListPlayerName))
        {
            _waitingListError = "Please enter your name.";
            return;
        }

        _joiningWaitlistTableId = _selectedTable.Id;
        _isJoiningWaitlist = true;
        _waitingListError = null;
        StateHasChanged();

        var response = await LobbyService.JoinWaitingListAsync(_selectedTable.Id, _waitingListPlayerName);

        if (response.Success)
        {
            _successMessage = $"You have been added to the waiting list for '{_selectedTable.Name}'. Your position: {response.Entry?.Position}. You will be notified when a seat becomes available.";
            CloseWaitingListModal();
            await LoadTablesAsync();
        }
        else
        {
            _waitingListError = response.Error;
        }

        _joiningWaitlistTableId = null;
        _isJoiningWaitlist = false;
        StateHasChanged();
    }

    private async Task HandleWaitingListKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await JoinWaitingList();
        }
    }

    private void CloseWaitingListModal()
    {
        _showWaitingListModal = false;
        _selectedTable = null;
        _waitingListPlayerName = null;
        _waitingListError = null;
    }

    private async Task QuickJoin()
    {
        _isQuickJoining = true;
        _errorMessage = null;
        _successMessage = null;
        StateHasChanged();

        PokerVariant? variant = null;
        if (!string.IsNullOrEmpty(_selectedVariant) && Enum.TryParse<PokerVariant>(_selectedVariant, out var parsedVariant))
        {
            variant = parsedVariant;
        }

        var response = await LobbyService.QuickJoinAsync(variant, _minSmallBlind, _maxSmallBlind);

        if (response.Success)
        {
            _successMessage = $"Successfully joined '{response.Table?.Name}'! You are in seat {response.SeatNumber}.";
            await LoadTablesAsync();
        }
        else
        {
            _errorMessage = response.Error;
        }

        _isQuickJoining = false;
        StateHasChanged();
    }

    private static string GetVariantDisplayName(PokerVariant variant) => variant switch
    {
        PokerVariant.TexasHoldem => "Texas Hold'em",
        PokerVariant.Omaha => "Omaha",
        PokerVariant.SevenCardStud => "7-Card Stud",
        PokerVariant.FiveCardDraw => "5-Card Draw",
        PokerVariant.Baseball => "Baseball",
        PokerVariant.KingsAndLows => "Kings & Lows",
        PokerVariant.FollowTheQueen => "Follow the Queen",
        _ => variant.ToString()
    };

    private static string GetStatusDisplayName(GameState state) => state switch
    {
        GameState.WaitingForPlayers => "Waiting",
        GameState.ReadyToStart => "Ready",
        GameState.CollectingBlinds => "Starting",
        GameState.Dealing => "Dealing",
        GameState.BettingRound => "In Progress",
        GameState.DealingCommunityCards => "In Progress",
        GameState.Showdown => "Showdown",
        GameState.HandComplete => "Hand Complete",
        GameState.Paused => "Paused",
        GameState.Ended => "Ended",
        _ => state.ToString()
    };

    private static string GetStatusBadgeClass(GameState state) => state switch
    {
        GameState.WaitingForPlayers => "bg-warning text-dark",
        GameState.ReadyToStart => "bg-info",
        GameState.BettingRound or GameState.Dealing or GameState.DealingCommunityCards => "bg-success",
        GameState.Showdown or GameState.HandComplete => "bg-primary",
        GameState.Paused => "bg-secondary",
        GameState.Ended => "bg-dark",
        _ => "bg-secondary"
    };

    private static string GetPrivacyDisplayName(TablePrivacy privacy) => privacy switch
    {
        TablePrivacy.Public => "Public",
        TablePrivacy.Private => "Private",
        TablePrivacy.Password => "Password",
        _ => privacy.ToString()
    };

    private static string GetPrivacyBadgeClass(TablePrivacy privacy) => privacy switch
    {
        TablePrivacy.Public => "bg-success",
        TablePrivacy.Private => "bg-info",
        TablePrivacy.Password => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private static string GetSeatsClass(TableSummaryDto table)
    {
        var availableSeats = table.MaxSeats - table.OccupiedSeats;
        if (availableSeats == 0) return "text-danger fw-bold";
        if (availableSeats <= 2) return "text-warning fw-bold";
        return "text-success";
    }
}
