@page "/"
@using CardGames.Poker.Api.Clients
@using CardGames.Poker.Api.Contracts
@inject IFiveCardDrawApi FiveCardDrawApi

<PageTitle>Home</PageTitle>

@if (_loading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_games.Count == 0)
{
    <p>No games found.</p>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Phase</th>
            <th>Created</th>
            <th>Id</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var g in _games)
        {
            <tr>
                <td>@g.Name</td>
                <td>@g.Status</td>
                <td>@g.CurrentPhase</td>
                <td>@g.CreatedAt.ToLocalTime().ToString("g")</td>
                <td><code>@g.Id</code></td>
            </tr>
        }
        </tbody>
    </table>
}

@code {

    private bool _loading = true;
    private string? _error;
    private List<GetGamesResponse> _games = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var gamesResponse = await FiveCardDrawApi.GetGamesAsync();
            if (gamesResponse.IsSuccessStatusCode)
            {
                _games = gamesResponse.Content.ToList();
            }
            
        }
        catch (Refit.ApiException ex)
        {
            _error = $"API error: {(int)ex.StatusCode} {ex.StatusCode}";
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }
}
