{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Aspire AppHost (CardGames.AppHost)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/CardGames.AppHost/bin/Debug/net10.0/CardGames.AppHost.dll",
      "cwd": "${workspaceFolder}/CardGames.AppHost",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development",
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Debug CLI (CardGames.Poker.CLI)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/CardGames.Poker.CLI/bin/Debug/net10.0/pocli.dll",
      "cwd": "${workspaceFolder}/CardGames.Poker.CLI",
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopAtEntry": false,
      "args": []
    }
  ],
  "compounds": [
    {
      "name": "Debug Aspire + CLI",
      "configurations": [
        "Debug Aspire AppHost (CardGames.AppHost)",
        "Debug CLI (CardGames.Poker.CLI)"
      ],
      "stopAll": true
    }
  ]
}
